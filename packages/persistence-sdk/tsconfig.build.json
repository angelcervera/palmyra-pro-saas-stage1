{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"declaration": true,
		"emitDeclarationOnly": false,
		"outDir": "dist",
		"rootDir": "src",
		"noEmit": false
	},
	"include": ["src/**/*"],
	"exclude": [
		"src/**/*.test.ts",
		"src/**/*.spec.ts",
		"src/**/*.integration.ts",
		"src/**/*.testhelper.ts"
	]
}
